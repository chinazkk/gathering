<view class="flex imagefirst">
	<image src="{{imgurl}}{{info.image}}" mode="widthFix" class="imgtou"></image>
</view>
<view class="flex solid-bottom padding-sm justify-between bg-white">
	<view class=" padding-sm  radius">{{info.name}}</view>
	<view class=" padding-sm  radius  text-blue "  style=" flex-shrink: 0;" wx:if="{{isjoin}}" bindtap="quitgroup">退出小组</view>
	<view class=" padding-sm  radius  text-blue "  style=" flex-shrink: 0;" wx:else bindtap="tojoin">申请加入</view>
</view>
<view class="padding-xs bg-white content flex">
	<view class="cu-avatar round lg bg-{{item.name}} margin-xs" wx:for="{{joininfo}}" wx:if="{{joininfo.length!=0}}" wx:key="key" style="background-image:url({{item.avatar.length>40?item.avatar:'https://gathering.chinazkk.cn/v1/user/img?url='+item.avatar}});">
		<!-- <text class="avatar-text">{{item.avatar}}</text> -->
			<image wx:if="{{joininfo.length==0}}"  src="{{info.user.avatar.length>40?info.user.avatar:'https://gathering.chinazkk.cn/v1/user/img?url='+info.user.avatar}}" class="imgadd" mode="aspectFill"></image>
	</view>
	<image wx:if="{{joininfo.length}}" src="/images/array.png" mode="aspectFill" bindtap="tojoindetail" data-userid="{{info.user_id}}" class="icon"></image>
</view>

<view class="bg-white">
<view class="padding flex justify-between align">
		<view class="desc margin-right">
			<view class="content padding-xs">成员数量：{{joininfo.length}}/{{info.number}}</view>
			<!-- <view class="content padding-xs">小组类别：</view> -->
			<view class="content padding-xs">小组简介：{{info.introduction}}</view>
			<view class="content padding-xs">组织者昵称：{{info.user.nick}}</view>
		</view>
		<view class="desc mess align2">
			<!-- <view class="cu-avatar mess touimage margin-top" style="background-image:url({{info.user.avatar.length>40?info.user.avatar:'https://gathering.chinazkk.cn/v1/user/img?url='+info.user.avatar}})"></view> -->
			<image src="{{info.user.avatar.length>40?info.user.avatar:'https://gathering.chinazkk.cn/v1/user/img?url='+info.user.avatar}}" class="imgadd" mode="aspectFill"></image>
			<view class="messtext text-blue" bindtap="modalinput2">私信</view> 
		</view>
	</view>
	<view class="divLine"></view>
	<view class="padding">
		<view class="content text-lg padding-xs">小组公告</view>
		<text class="padding-xxl  text-gray title1" wx:if="{{info.announcement}}">{{info.announcement}}</text>
		<text class="padding-xxl  text-gray title1" wx:else>此小组暂无公告</text>
		<!-- <text class="padding-xxl  text-gray title1">xxxxx</text> -->
	</view>
</view>
<view class="flex solid-bottom padding-sm justify-between">
	<view class=" padding-sm  radius">活动</view>
	<view class=" padding-sm  radius  text-blue " bindtap="toallact">查看全部</view>
</view>
<view class="flex menu">
	<view wx:for="{{activityinfo}}" class=" padding-sm " wx:key="key" bindtap="toactdetail" data-id="{{item.id}}">
		<image src="{{imgurl}}{{item.image}}" class="actimg" mode="aspectFill"></image>
	</view>
	<image src="/images/addgrey.png" class="img padding " bindtap="tocreate"></image>
</view>
<view class="flex solid-bottom padding-sm justify-between">
	<view class=" padding-sm  radius">讨论区</view>
	<view class=" padding-sm  radius  text-blue " bindtap="toalltalk">查看全部</view>
</view>
<view class="padding-xs" wx:for="{{talkinfo}}" wx:if="{{talkinfo}}" wx:key="key">
	<view class="flex padding-sm menu" style="background-color:#d8d8d8">
		<view class="cu-avatar lg round margin-left vivod" style="background-image:url({{item.user.avatar.length>40?item.user.avatar:'https://gathering.chinazkk.cn/v1/user/img?url='+item.user.avatar}})"></view>
		<view class="pading text-lg margin vivod">{{item.user.nick}}: </view>
		<view class="pading text-lg text">{{item.content}}</view>
	</view>
</view>
<text class="padding-xxl  text-gray title2" wx:if="{{!talkinfo.length}}">该小组暂无评论喔</text>


<modal hidden="{{hiddenmodalput}}" title="问题内容：{{info.question}}" confirm-text="提交" cancel-text='取消' bindcancel="cancel" bindconfirm="confirm2">
	<input type='text' bindinput="getans" placeholder="请输入答案" auto-focus />
</modal>

<modal hidden="{{hiddenmodalput2}}" title="请输入私信内容" confirm-text="提交" cancel-text='取消' bindcancel="cancel2" bindconfirm="confirm">
	<input type='text' bindinput="getmessage" placeholder="请输入内容" auto-focus />
</modal>