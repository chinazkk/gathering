/* popup-bottom.wxss */
.wrap {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99999;
  width: 100vw;
  height: 100vh;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0;
  transition: 0.2s;
}
.mask-show {
  opacity: 0.4;
}

.box {
  position: fixed;
  font-size: 50rpx;
  padding: 20rpx;
  top: 100vh;
  left: 0;
  z-index: 2;
  width: 100%;
  /* height: 140rpx; */
  min-height: 100rpx;
  background: #fff;
  text-align: center;
}